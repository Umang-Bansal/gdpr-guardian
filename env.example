# Copy this file to .env and fill in values before running locally

# Required for Gemini via Portia SDK (used by LLM summary)
GOOGLE_API_KEY=

# Optional: enable Portia Cloud live PlanRuns and dashboard links
PORTIA_API_KEY=

# Optional: server port (defaults to 3000)
PORT=3000

# Optional: Gmail integration
# If not set, the app will also look for token.json in the project root
GMAIL_TOKEN_PATH=
# Optional filters for demo runs
GMAIL_LABEL_ID=
GMAIL_QUERY=

# Optional: OAuth client secrets path (not required for non-interactive demos)
GMAIL_CREDENTIALS_PATH=
